<div class="form-group">
    <label>{{ 'Assigned Roles' | trans }} *</label>
    {% for child in form.company_role_collection %}
        {% if child.vars.data %}
            {{ form_widget(child) }}
        {% endif %}
    {% endfor %}
</div>
<div class="form-group">
    <label>{{ 'Unassigned Roles' | trans }}</label>
    {% for child in form.company_role_collection %}
        {% if not child.vars.data %}
            {{ form_widget(child) }}
        {% endif %}
    {% endfor %}
</div>
